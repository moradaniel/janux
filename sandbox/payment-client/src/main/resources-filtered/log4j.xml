<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

	<appender name="AppLogger" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${janux.logging.payment-client.Path}/app.log"/>
		<param name="Append" value="true"/>
		<param name="DatePattern" value="'.'yyyyMMdd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="${janux.logging.payment-client.Pattern}"/>
		</layout>
	</appender>

	<appender name="StdOut" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="${janux.logging.payment-client.Pattern}"/>
		</layout>
	</appender>


	<logger name="biz.janux">
		<level value="INFO" />
	</logger>
	
	<logger name="janux.payment.gateway.test">
		<level value="INFO" />
	</logger>
	
	<logger name="api.org.janux.bus.service">
		<level value="INFO" />
	</logger>
	

	<root>
		<level value="INFO"/>
		<appender-ref ref="${janux.logging.payment-client.Logger}" />
	</root>	
	
</log4j:configuration>
